@model CoffeeShop.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <link rel="stylesheet" href="~/Assest/Admin/css/style.css">
    <link rel="stylesheet" href="~/Assest/Admin/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Assest/Admin/vendors/css/vendor.bundle.base.css">
    <link rel="shortcut icon" type="image/png" href="~/Assest/Client/img/logo.png" />
</head>
<body>
    <style>
        li{
            margin-top: 10px;
            list-style-type: none;
        }
    </style>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <div style="display: flex">
                                <div>
                                    <img src="~/Assest/Client/img/logo.png" />
                                </div>
                                <div style="height: 30px; margin-top: 15px; margin-left: 10px;">
                                    <h3 class="card-title text-left mb-3">Đăng nhập</h3>
                                </div>
                            </div>
                            @using (Html.BeginForm("Login", "User", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" }, "error")
                                <div class="form-group">
                                    <label>Email *</label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control p_input", @autofocus = "autufocus" })
                                </div>
                                <div class="form-group">
                                    <label>Password *</label>
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control p_input" })
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block enter-btn">Đăng nhập</button>
                                </div>
                                <p class="sign-up text-center">Bạn chưa có tài khoản?<a href="/User/Register"> Đăng Ký</a></p>
                                <p class="sign-up text-center">Bạn là nhân viên cửa hàng?<a href="/Admin/Login"> Đăng Nhập</a></p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Assest/Admin/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/Assest/Admin/js/off-canvas.js"></script>
    <script src="~/Assest/Admin/js/hoverable-collapse.js"></script>
    <script src="~/Assest/Admin/js/misc.js"></script>
    <script src="~/Assest/Admin/js/settings.js"></script>
    <script src="~/Assest/Admin/js/todolist.js"></script>
</body>
</html>
