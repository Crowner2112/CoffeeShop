@model PagedList.IPagedList<Models.EF.Customer>
@using PagedList.Mvc

@{
    ViewBag.Title = "List Customer";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    List Customer
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Index", "Customer", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-12" style="display: flex">
                            <div class="col-md-3">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control" placeholder="Search Name or Email" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-secondary">
                                    <i class="mdi mdi-account-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <hr />
                }
                <div class="table-responsive">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Customer Name</th>
                                <th>Date of birth</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Phone number</th>
                                <th>Created date</th>
                                <th>Last online</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.CustomerID">
                                    <td>@item.CustomerID</td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.DOB</td>
                                    <td>@item.Email</td>
                                    <td>@item.Address</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.LastOnline</td>
                                    <td>
                                        @Ajax.ActionLink("Delete", "Delete", new { id = item.CustomerID },
                                       new AjaxOptions
                                       {
                                           Confirm = "Do you want to delete this user?",
                                           OnComplete = "$(this).closest('tr').remove()",
                                           HttpMethod = "Delete"
                                       }, new { @class = "btn btn-danger btn-fw" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @ViewBag.searchString }))
                </div>
            </div>
        </div>
    </div>
</div>